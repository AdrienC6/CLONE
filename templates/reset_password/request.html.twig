{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser mon mot de passe{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8 mx-auto justify-content-center">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="mt-5 mb-3 text-center text-muted">Réinitialiser mon mot de passe</h1>
            <div class="text-center mb-3">
                <small class="text-muted">
                    Indiquez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                </small>
            </div>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <button type="submit" class="btn btn-primary btn-block" formnovalidate>Réinitialiser mon mot de passe</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}