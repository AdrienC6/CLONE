{% extends 'layouts/base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}

    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <h1 class="text-muted text-center mb-3">Inscription</h1>

            {{ form_start(registrationForm) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.firstName, {
                                            label : 'Prénom'
                                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.lastName, {
                                            label : 'Nom'
                                        }) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.pseudo) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label : 'J\'accepte les conditions d\'utilisation'
                }) }}

                <button type="submit" class="btn btn-primary btn-block" formnovalidate>Inscription</button>
            {{ form_end(registrationForm) }}
            <p class="text-center text-muted mt-3">Vous êtes déjà inscrit(e)? <a href="{{path('app_login')}}">Se connecter</a></p>

        </div>
    </div>

{% endblock %}
