{% extends 'layouts/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
            <p class="text-center text-muted mb-3">Le monde vous attend !</p>
            <form method="post">
                {% if error %}
                    <div class="alert alert-error rounded mb-3" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-flex justify-content-between">
                    <div class="checkbox mb-3 mt-3">
                        <label>
                            <input type="checkbox" name="_remember_me"><span class="pl-2">Rester connecté(e)</span>
                        </label>
                    </div>

                    <a class ="mt-3" href="#">Mot de passe oublié</a>
                </div>
                <button class="btn btn-block btn-primary" type="submit">
                    Me connecter
                </button>

                <p class="text-center mt-4 text-muted">Pas encore inscrit(e)? <a href="{{path('app_register')}}">Créer un compte</a></p>
            </form>
        </div>
    </div>
{% endblock %}
